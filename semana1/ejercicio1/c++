#include <iostream>
using namespace std;

int sumaArreglo(int lista[]) {
    int suma = 0;
    for (int i = 0; i < 5; i++) {
        suma += lista[i];
    }
    return suma;
}

int main() {
    int arreglo[] = {1, 2, 3, 4, 5};
    cout << sumaArreglo(arreglo) << endl;  // Output: 15
    return 0;
}

